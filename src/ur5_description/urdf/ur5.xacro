<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro" name="ur5_robot">

  <xacro:property name="base_mass" value="4.0" />
  <xacro:property name="shoulder_mass" value="3.7" />
  <xacro:property name="upper_arm_mass" value="8.393" />
  <xacro:property name="forearm_mass" value="2.275" />
  <xacro:property name="wrist_1_mass" value="1.219" />
  <xacro:property name="wrist_2_mass" value="1.219" />
  <xacro:property name="wrist_3_mass" value="0.1879" />

  <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <mass value="${mass}" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
    </inertial>
  </xacro:macro>

  <link name="world" />
  <joint name="world_joint" type="fixed">
    <parent link="world" />
    <child link = "base_link" />
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
  </joint>

  <link name="base_link">
    <visual>
      <geometry><mesh filename="package://ur5_description/meshes/visual/base.dae"/></geometry>
      <material name="LightGrey"><color rgba="0.7 0.7 0.7 1.0"/></material>
    </visual>
    <collision>
      <geometry><mesh filename="package://ur5_description/meshes/collision/base.stl"/></geometry>
    </collision>
    <xacro:default_inertial mass="${base_mass}"/>
  </link>

  <joint name="shoulder_pan_joint" type="revolute">
    <parent link="base_link" />
    <child link = "shoulder_link" />
    <origin xyz="0.0 0.0 0.089159" rpy="0.0 0.0 0.0" />
    <axis xyz="0 0 1" />
    <limit lower="-6.28" upper="6.28" effort="150.0" velocity="3.15"/>
  </joint>
  <link name="shoulder_link">
    <visual>
      <geometry><mesh filename="package://ur5_description/meshes/visual/shoulder.dae"/></geometry>
    </visual>
    <collision>
      <geometry><mesh filename="package://ur5_description/meshes/collision/shoulder.stl"/></geometry>
    </collision>
    <xacro:default_inertial mass="${shoulder_mass}"/>
  </link>

  <joint name="shoulder_lift_joint" type="revolute">
    <parent link="shoulder_link" />
    <child link = "upper_arm_link" />
    <origin xyz="0.0 0.13585 0.0" rpy="0.0 1.57079632679 0.0" />
    <axis xyz="0 1 0" />
    <limit lower="-6.28" upper="6.28" effort="150.0" velocity="3.15"/>
  </joint>
  <link name="upper_arm_link">
    <visual>
      <geometry><mesh filename="package://ur5_description/meshes/visual/upperarm.dae"/></geometry>
    </visual>
    <collision>
      <geometry><mesh filename="package://ur5_description/meshes/collision/upperarm.stl"/></geometry>
    </collision>
    <xacro:default_inertial mass="${upper_arm_mass}"/>
  </link>

  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm_link" />
    <child link = "forearm_link" />
    <origin xyz="0.0 -0.1197 0.42500" rpy="0.0 0.0 0.0" />
    <axis xyz="0 1 0" />
    <limit lower="-3.14" upper="3.14" effort="150.0" velocity="3.15"/>
  </joint>
  <link name="forearm_link">
    <visual>
      <geometry><mesh filename="package://ur5_description/meshes/visual/forearm.dae"/></geometry>
    </visual>
    <collision>
      <geometry><mesh filename="package://ur5_description/meshes/collision/forearm.stl"/></geometry>
    </collision>
    <xacro:default_inertial mass="${forearm_mass}"/>
  </link>

  <joint name="wrist_1_joint" type="revolute">
    <parent link="forearm_link" />
    <child link = "wrist_1_link" />
    <origin xyz="0.0 0.0 0.39225" rpy="0.0 1.57079632679 0.0" />
    <axis xyz="0 1 0" />
    <limit lower="-6.28" upper="6.28" effort="28.0" velocity="3.2"/>
  </joint>
  <link name="wrist_1_link">
    <visual>
      <geometry><mesh filename="package://ur5_description/meshes/visual/wrist1.dae"/></geometry>
    </visual>
    <collision>
      <geometry><mesh filename="package://ur5_description/meshes/collision/wrist1.stl"/></geometry>
    </collision>
    <xacro:default_inertial mass="${wrist_1_mass}"/>
  </link>

  <joint name="wrist_2_joint" type="revolute">
    <parent link="wrist_1_link" />
    <child link = "wrist_2_link" />
    <origin xyz="0.0 0.093 0.0" rpy="0.0 0.0 0.0" />
    <axis xyz="0 0 1" />
    <limit lower="-6.28" upper="6.28" effort="28.0" velocity="3.2"/>
  </joint>
  <link name="wrist_2_link">
    <visual>
      <geometry><mesh filename="package://ur5_description/meshes/visual/wrist2.dae"/></geometry>
    </visual>
    <collision>
      <geometry><mesh filename="package://ur5_description/meshes/collision/wrist2.stl"/></geometry>
    </collision>
    <xacro:default_inertial mass="${wrist_2_mass}"/>
  </link>

  <joint name="wrist_3_joint" type="revolute">
    <parent link="wrist_2_link" />
    <child link = "wrist_3_link" />
    <origin xyz="0.0 0.0 0.09465" rpy="0.0 0.0 0.0" />
    <axis xyz="0 1 0" />
    <limit lower="-6.28" upper="6.28" effort="28.0" velocity="3.2"/>
  </joint>
  <link name="wrist_3_link">
    <visual>
      <geometry><mesh filename="package://ur5_description/meshes/visual/wrist3.dae"/></geometry>
    </visual>
    <collision>
      <geometry><mesh filename="package://ur5_description/meshes/collision/wrist3.stl"/></geometry>
    </collision>
    <xacro:default_inertial mass="${wrist_3_mass}"/>
  </link>

  <joint name="gripper_joint" type="fixed">
    <parent link="wrist_3_link" />
    <child link = "gripper_link" />
    <origin xyz="0.0 0.08 0.0" rpy="1.57 0 0" /> </joint>
  
  <link name="gripper_link">
    <visual>
      <geometry><box size="0.05 0.12 0.05"/></geometry>
      <material name="Black"><color rgba="0.1 0.1 0.1 1.0"/></material>
    </visual>
    <collision>
      <geometry><box size="0.05 0.12 0.05"/></geometry>
    </collision>
    <xacro:default_inertial mass="0.5"/>
  </link>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

</robot>